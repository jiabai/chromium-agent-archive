{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": ".",
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "sourceMap": true
  },
  "include": [
    "core/**/*.ts",
    "plugins/**/*.ts",
    "shared/**/*.ts",
    "config/**/*.ts",
    "utils/**/*.ts",
    "main.ts",
    "logging.ts"
  ]
}